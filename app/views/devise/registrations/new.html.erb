<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <%= link_to "Nagano Cake", root_path, class: "navbar-brand" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <%= link_to "About", homes_about_path, class: "nav-link active" %>
        <%= link_to "商品一覧", items_path, class: 'nav-link' %>
        <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link' %>
        <%= link_to "ログイン", customer_session_path, class: 'nav-link' %>
      </div>
    </div>
  </div>
</nav>
<div class="parent">
  <div class="inner">
    <h4 class="registration-label-a">新規会員登録</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
    
      <div class="field">
        <%= f.label :first_name, "(姓)" %>
        <%= f.text_field :first_name, autofocus: true, placeholder: "令和" %>
        <%= f.label :last_name, "(名)" %>
        <%= f.text_field :last_name, placeholder: "花子" %>
      </div>
      
      <div class="field">
        <%= f.label :first_name_kana, "(セイ)" %>
        <%= f.text_field :first_name_kana, placeholder: "レイワ" %>
        <%= f.label :last_name_kana, "(メイ)" %>
        <%= f.text_field :last_name_kana, placeholder: "ハナコ" %>
      </div>
      
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, placeholder: "sample@example.com" %>
      </div>
      
      <div class="field">
        <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
        <%= f.text_field :email, placeholder: "0000000" %>
      </div>
      
      <div class="field">
        <%= f.label :address, "住所" %>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
      </div>
      
      <div class="field">
        <%= f.label :telephone_number, "電話番号(ハイフンなし)" %>
        <%= f.text_field :telephone_number, placeholder: "00000000000" %>
      </div>
    
      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation, "パスワード(確認用)" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
    
      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
    
    <h4 class="registration-label-b">既に登録済みの方</h4>
    <%= link_to "こちら", customer_session_path %>　からログインしてください。
  </div>
</div>